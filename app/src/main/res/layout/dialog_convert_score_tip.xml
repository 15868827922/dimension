<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="@dimen/dp_750_586"
        android:layout_height="@dimen/dp_750_376"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_bg_dialog"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_tip_content"
            android:layout_width="@dimen/dp_750_358"
            android:layout_height="@dimen/dp_750_268"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:text=""
            android:textSize="@dimen/sp_750_36"
            android:lineSpacingExtra="@dimen/dp_750_6"
            android:textColor="@color/unit_text_tv_title_1"/>
        <View
           android:layout_width="match_parent"
            android:layout_height="@dimen/dp_750_2"
            android:background="@color/unit_color_main"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_750_108"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/unit_text_tv_title_1"
                android:text="不了，不了"
                android:gravity="center"
                android:textSize="@dimen/sp_750_30"
                android:background="@color/unit_dialog_bg_cancel"
                android:layout_marginLeft="@dimen/dp_750_4"
                android:layout_marginBottom="@dimen/dp_750_5"/>

            <View
                android:layout_width="@dimen/dp_750_2"
                android:layout_height="match_parent"
                android:background="@color/unit_color_main"/>

            <TextView
                android:id="@+id/tv_go_convert"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/unit_text_tv_title_1"
                android:text="是的，就现在"
                android:gravity="center"
                android:textSize="@dimen/sp_750_30"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
