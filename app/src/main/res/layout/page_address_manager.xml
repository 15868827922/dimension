<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dimension.me.AddressManagerActivity"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/view_add_address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_750_130"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_750_46">

        <ImageView
            android:layout_width="@dimen/dp_750_28"
            android:layout_height="@dimen/dp_750_30"
            android:background="@mipmap/icon_add_address_tip"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="新增地址"
            android:textSize="@dimen/sp_750_30"
            android:textColor="@color/unit_text_tv_title_1"
            android:layout_marginLeft="@dimen/dp_750_20"/>
        <ImageView
            android:layout_width="@dimen/dp_750_14"
            android:layout_height="@dimen/dp_750_22"
            android:background="@mipmap/arrow"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_750_46"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_750_10"
        android:background="@color/unit_view_stub"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/view_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>