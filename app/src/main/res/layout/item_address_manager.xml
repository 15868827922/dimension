<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/dp_750_120"
      android:layout_marginTop="@dimen/dp_750_28"
      android:background="@drawable/shape_careful_chosen_bg"
      android:layout_marginLeft="@dimen/dp_750_26"
      android:layout_marginRight="@dimen/dp_750_26"
      android:layout_marginBottom="@dimen/dp_750_2">
    <ImageView
        android:layout_width="@dimen/dp_750_30"
        android:layout_height="@dimen/dp_750_30"
        android:background="@mipmap/icon_address_tip"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_750_24"/>
    <View
        style="@style/styleDividerVertical"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_750_26"
        android:layout_marginBottom="@dimen/dp_750_26"
        android:layout_marginLeft="@dimen/dp_750_24"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_750_26">

      <LinearLayout
          android:id="@+id/view_user_info"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名字"
            android:textColor="@color/unit_text_tv_title_1"
            android:textSize="@dimen/sp_750_30" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_750_46"
            android:text="15868827922"
            android:textColor="@color/unit_text_tv_title_1"
            android:textSize="@dimen/sp_750_30" />
      </LinearLayout>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="浙江省杭州市"
          android:textColor="@color/unit_text_tv_title_1"
          android:textSize="@dimen/sp_750_24"
          android:layout_marginTop="@dimen/dp_750_14"/>
    </LinearLayout>



  </LinearLayout>
  <ImageView
      android:id="@+id/view_default_tip"
      android:layout_width="@dimen/dp_750_82"
      android:layout_height="@dimen/dp_750_82"
      android:background="@mipmap/icon_address_default_tip"
      android:layout_alignParentRight="true"
      android:layout_marginRight="@dimen/dp_750_25"
      android:layout_marginTop="@dimen/dp_750_27"/>
</RelativeLayout>
