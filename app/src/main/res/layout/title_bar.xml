        android:orientation="horizontal">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:gravity="top"
            android:paddingTop="@dimen/dp_750_18"
            android:textSize="@dimen/sp_750_36"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/imgRightTitle"
            android:layout_width="@dimen/dp_750_30"
            android:layout_height="@dimen/dp_750_16"
            android:layout_marginLeft="@dimen/dp_750_20"
