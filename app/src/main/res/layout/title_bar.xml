    <ImageView
        android:id="@+id/right_title_btn"
        android:layout_width="@dimen/dp_750_88"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@drawable/unit_selector_bg_view_init_transparent"
        android:padding="@dimen/dp_750_22"
        android:visibility="gone"
        android:layout_marginRight="@dimen/dp_750_32"/>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_750_24"
        android:layout_alignParentRight="true">
        <com.shenjing.dimension.dimension.base.image.LPNetworkRoundedImageView
            android:id="@+id/right_title_btn_network"
            android:layout_width="@dimen/dp_750_64"
            android:layout_height="@dimen/dp_750_64"
            android:scaleType="centerCrop"/>
        <View
            android:id="@+id/right_title_red_dot"
            android:layout_width="@dimen/dp_750_20"
            android:layout_height="@dimen/dp_750_20"
            android:background="@drawable/shape_account_center_new_tip"
            android:layout_gravity="right"
            android:visibility="invisible"/>
    </FrameLayout>
    <TextView
        android:id="@+id/right_title_text_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/dp_750_24"
        android:clickable="true"
        android:gravity="center"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/sp_750_24"
        android:visibility="visible"/>

    <Button
        android:id="@+id/right_title_btn_red"
