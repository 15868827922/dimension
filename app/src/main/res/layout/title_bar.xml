        android:layout_width="@dimen/dp_750_150"
        android:layout_height="@dimen/dp_750_64"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_750_24"
        android:text="@string/login_btn_text"
        android:textSize="@dimen/sp_750_26"
        android:enabled="false"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/left_title_text_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/dp_750_16"
        android:layout_marginLeft="@dimen/dp_750_8"
        android:clickable="true"
        android:gravity="center"
        android:singleLine="true"
        android:text="返回"
        android:textColor="@color/text_black"
        android:textSize="@dimen/common_font_sw320dp_of_13"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/right_title_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_750_54"
        android:clickable="true"
        android:gravity="center"
        android:visibility="gone" >

        <TextView
            android:id="@+id/right_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/text_black"
            android:textSize="@dimen/dp_750_38"/>

        <ImageView
            android:id="@+id/right_title_index"
            android:layout_width="@dimen/dp_750_10"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/right_title_text"
            android:layout_marginLeft="@dimen/dp_750_10"
            android:layout_toRightOf="@id/right_title_text"
            android:src="@mipmap/icon_nav_switch" />
    </RelativeLayout>

</RelativeLayout>

