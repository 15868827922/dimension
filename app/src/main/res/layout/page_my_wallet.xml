<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".dimension.me.MyWalletActivity"
    android:gravity="center_horizontal"
    android:background="@color/white">

    <ImageView
        android:layout_width="@dimen/dp_750_290"
        android:layout_height="@dimen/dp_750_318"
        android:layout_marginTop="@dimen/dp_750_66"
        android:background="@mipmap/icon_my_wallet_for_my"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_750_82"
        android:gravity="center_horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/img_coin_tip"
                android:layout_width="@dimen/dp_750_118"
                android:layout_height="@dimen/dp_750_48"
                android:background="@mipmap/icon_my_coin_text_tip"
                android:layout_centerHorizontal="true"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_750_30"
                android:layout_below="@+id/img_coin_tip"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/unit_text_tv_title_1"
                    android:text="--"
                    android:textSize="@dimen/sp_750_48"/>
                <ImageView
                    android:layout_width="@dimen/dp_750_32"
                    android:layout_height="@dimen/dp_750_36"
                    android:background="@mipmap/icon_my_coin_num_tip"
                    android:layout_marginLeft="@dimen/dp_750_10"
                    android:layout_marginTop="@dimen/dp_750_3"/>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="@dimen/dp_750_2"
            android:layout_height="@dimen/dp_750_66"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_750_114"
            android:layout_marginRight="@dimen/dp_750_114"
            android:background="@color/unit_text_tv_title_1"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/img_score_tip"
                android:layout_width="@dimen/dp_750_94"
                android:layout_height="@dimen/dp_750_48"
                android:background="@mipmap/icon_my_score_text_tip"
                android:layout_centerHorizontal="true"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_750_30"
                android:layout_below="@+id/img_score_tip"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/unit_text_tv_title_1"
                    android:text="--"
                    android:textSize="@dimen/sp_750_48"/>
                <ImageView
                    android:layout_width="@dimen/dp_750_40"
                    android:layout_height="@dimen/dp_750_36"
                    android:background="@mipmap/icon_score_num_tip"
                    android:layout_marginLeft="@dimen/dp_750_10"
                    android:layout_marginTop="@dimen/dp_750_3"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_go_recharge"
        android:layout_width="@dimen/dp_750_400"
        android:layout_height="@dimen/dp_750_80"
        android:background="@drawable/shape_btn_bg_main_execute"
        android:layout_gravity="center_horizontal"
        android:text="去兑换"
        android:textColor="@color/unit_text_main_tip"
        android:textSize="@dimen/sp_750_30"
        android:layout_marginTop="@dimen/dp_750_40"/>
    <Button
        android:id="@+id/btn_go_sure"
        android:layout_width="@dimen/dp_750_400"
        android:layout_height="@dimen/dp_750_80"
        android:background="@drawable/shape_btn_bg_execute"
        android:layout_gravity="center_horizontal"
        android:text="去兑换"
        android:textColor="@color/unit_bg_btn_execute"
        android:textSize="@dimen/sp_750_30"
        android:layout_marginTop="@dimen/dp_750_40"/>
</LinearLayout>