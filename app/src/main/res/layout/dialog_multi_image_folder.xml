<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_750_900"
        android:background="@color/white">
        <ListView 
            android:id="@+id/folderList"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_750_20"
            android:layout_marginRight="@dimen/dp_750_20"
            android:cacheColorHint="#00000000"
            android:scrollbars="none"
            android:dividerHeight="@dimen/dp_750_1"
            android:divider="#dfdfdf" />
    </LinearLayout>
    
    <RelativeLayout
        android:clickable="true"
        android:id="@+id/footer"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_750_100">
        
        <Button
            android:id="@+id/category_btn"
            android:paddingLeft="@dimen/dp_750_32"
            android:paddingRight="@dimen/dp_750_32"
            android:layout_centerVertical="true"
            android:textColor="@color/unit_text_tv_title_2"
            tools:text="所有图片"
            android:textSize="@dimen/sp_750_30"
            android:gravity="center_vertical"
            android:drawableRight="@mipmap/multi_image_folder_indicator"
            android:drawablePadding="@dimen/dp_750_10"
            android:background="@null"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        
    </RelativeLayout>
    
</LinearLayout>