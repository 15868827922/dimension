<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#efefef"
    android:orientation="vertical">
    <TextView
        android:padding="@dimen/common_sw320dp_of_8"
        android:id="@+id/bottom_sheet_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center"
        android:text="分享到"
        android:textColor="@color/unit_text_tv_title_1"
        android:textSize="@dimen/common_font_sw320dp_of_15" />

    <LinearLayout
        android:id="@+id/view_fixed_height_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_fixed_height_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_sw320dp_of_50"
            android:gravity="center"
            android:textSize="@dimen/sp_750_26"
            android:textColor="@color/unit_text_tv_title_2"
            android:text="18839153383\n可能是一个电话号码，你可以"/>

        <View
            style="@style/styleDividerHorizontal"/>

    </LinearLayout>


    <ViewStub
        android:id="@+id/bottom_sheet_stub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bottom_sheet_positive"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/common_sw320dp_of_6"
        android:background="@android:color/white"
        android:text="确定"
        android:textColor="#333333"
        android:textSize="@dimen/common_font_sw320dp_of_15" />
</LinearLayout>