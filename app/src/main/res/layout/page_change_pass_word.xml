<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dimension.me.ChangePassWordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">
        <RelativeLayout
            android:id="@+id/view_input_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_750_88"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_750_40"
            android:layout_marginLeft="@dimen/dp_750_26"
            android:layout_marginRight="@dimen/dp_750_26">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_bg_input"
                android:alpha="0.2"/>

            <EditText
                android:id="@+id/edt_input_phone"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_750_88"
                android:layout_weight="1"
                android:textColorHint="@color/unit_edt_hint_text"
                android:hint="请输入新手机号"
                android:textColor="@color/unit_text_tv_title_1"
                android:background="@null"
                android:inputType="phone"
                android:maxLength="11"
                android:textSize="@dimen/sp_750_24"
                android:paddingLeft="@dimen/dp_750_36"
                android:singleLine="true"/>
            <ImageView
                android:id="@+id/view_delete_phone"
                android:layout_width="@dimen/dp_750_60"
                android:layout_height="@dimen/dp_750_60"
                android:src="@mipmap/icon_delete_gray"
                android:padding="@dimen/dp_750_15"
                android:layout_gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_750_19"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/view_input_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_750_88"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_750_48"
            android:layout_marginLeft="@dimen/dp_750_26"
            android:layout_marginRight="@dimen/dp_750_26"
            android:layout_marginBottom="@dimen/dp_750_32">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_bg_input"
                android:alpha="0.2"/>

            <EditText
                android:id="@+id/edt_input_code"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_750_88"
                android:layout_weight="1"
                android:textColorHint="@color/unit_edt_hint_text"
                android:hint="填写验证码"
                android:textColor="@color/unit_text_tv_title_1"
                android:background="@null"
                android:maxLength="6"
                android:textSize="@dimen/sp_750_24"
                android:inputType="number"
                android:paddingLeft="@dimen/dp_750_36"
                android:singleLine="true"/>

            <LinearLayout
                android:id="@+id/view_get_code"
                android:layout_width="@dimen/dp_750_180"
                android:layout_height="@dimen/dp_750_60"
                android:background="@drawable/shape_bg_get"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_750_36"
                android:gravity="center">
                <ImageView
                    android:layout_width="@dimen/dp_750_20"
                    android:layout_height="@dimen/dp_750_30"
                    android:background="@mipmap/icon_phone_code"/>

                <TextView
                    android:id="@+id/tv_get_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="获取验证码"
                    android:textSize="@dimen/sp_750_24"
                    android:layout_marginLeft="@dimen/dp_750_12"
                    android:textColor="@color/unit_bg_btn_get"/>

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/view_input_old_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_750_88"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_750_50"
            android:layout_marginLeft="@dimen/dp_750_26"
            android:layout_marginRight="@dimen/dp_750_26">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_bg_input"
                android:alpha="0.2"/>

            <EditText
                android:id="@+id/edt_input_old_password"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_750_88"
                android:layout_weight="1"
                android:textColorHint="@color/unit_edt_hint_text"
                android:hint="请输入旧密码"
                android:textColor="@color/unit_text_tv_title_1"
                android:background="@null"
                android:inputType="textPassword"
                android:maxLength="12"
                android:textSize="@dimen/sp_750_24"
                android:paddingLeft="@dimen/dp_750_36"
                android:singleLine="true"/>
            <ImageView
                android:id="@+id/view_show_password_1"
                android:layout_width="@dimen/dp_750_58"
                android:layout_height="@dimen/dp_750_50"
                android:src="@mipmap/icon_eye_close"
                android:padding="@dimen/dp_750_15"
                android:layout_gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_750_23"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_750_50"
            android:text="* 密码不正确"
            android:textSize="@dimen/sp_750_24"
            android:textColor="@color/unit_text_main_tip"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_750_58"/>

        <RelativeLayout
            android:id="@+id/view_input_new_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_750_88"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_750_26"
            android:layout_marginRight="@dimen/dp_750_26">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_bg_input"
                android:alpha="0.2"/>

            <EditText
                android:id="@+id/edt_input_new_password"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_750_88"
                android:layout_weight="1"
                android:textColorHint="@color/unit_edt_hint_text"
                android:hint="请输入新密码"
                android:textColor="@color/unit_text_tv_title_1"
                android:background="@null"
                android:inputType="textPassword"
                android:maxLength="12"
                android:textSize="@dimen/sp_750_24"
                android:paddingLeft="@dimen/dp_750_36"
                android:singleLine="true"/>
            <ImageView
                android:id="@+id/view_show_password_2"
                android:layout_width="@dimen/dp_750_58"
                android:layout_height="@dimen/dp_750_50"
                android:src="@mipmap/icon_eye_close"
                android:padding="@dimen/dp_750_15"
                android:layout_gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_750_23"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/view_input_new_password_again"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_750_88"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_750_50"
            android:layout_marginLeft="@dimen/dp_750_26"
            android:layout_marginRight="@dimen/dp_750_26">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_bg_input"
                android:alpha="0.2"/>

            <EditText
                android:id="@+id/edt_input_new_password_again"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_750_88"
                android:layout_weight="1"
                android:textColorHint="@color/unit_edt_hint_text"
                android:hint="确认新密码"
                android:textColor="@color/unit_text_tv_title_1"
                android:background="@null"
                android:maxLength="12"
                android:inputType="textPassword"
                android:textSize="@dimen/sp_750_24"
                android:paddingLeft="@dimen/dp_750_36"
                android:singleLine="true"/>
            <ImageView
                android:id="@+id/view_show_new_password_3"
                android:layout_width="@dimen/dp_750_58"
                android:layout_height="@dimen/dp_750_50"
                android:src="@mipmap/icon_eye_close"
                android:padding="@dimen/dp_750_15"
                android:layout_gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_750_23"/>

        </RelativeLayout>

        <Button
            android:id="@+id/btn_go_sure"
            android:layout_width="@dimen/dp_750_400"
            android:layout_height="@dimen/dp_750_80"
            android:background="@drawable/shape_btn_bg_execute"
            android:layout_gravity="center_horizontal"
            android:text="确定"
            android:textColor="@color/unit_bg_btn_execute"
            android:textSize="@dimen/sp_750_30"
            android:layout_marginTop="@dimen/dp_750_148"
            android:layout_marginBottom="@dimen/dp_750_100"/>
    </LinearLayout>

</ScrollView>