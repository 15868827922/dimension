<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <GridView
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dp_750_8"
        android:horizontalSpacing="@dimen/dp_750_8"
        android:verticalSpacing="@dimen/dp_750_8"
        android:clipToPadding="false"
        android:numColumns="4"
        android:columnWidth="@dimen/dp_750_177"/>

    <TextView
        android:id="@+id/timeline_area"
        tools:text="2015年4月1日"
        android:textColor="#CDCECE"
        android:textSize="@dimen/sp_750_28"
        android:paddingLeft="@dimen/dp_750_24"
        android:paddingTop="@dimen/dp_750_10"
        android:paddingBottom="@dimen/dp_750_10"
        android:background="#cc000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:clickable="true"
        android:id="@+id/footer"
        android:background="#cc000000"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_750_100">

        <Button
            android:id="@+id/category_btn"
            android:paddingLeft="@dimen/dp_750_32"
            android:paddingRight="@dimen/dp_750_32"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            tools:text="所有图片"
            android:textSize="@dimen/sp_750_30"
            android:gravity="center_vertical"
            android:drawableRight="@mipmap/icon_arrow_gray"
            android:drawablePadding="@dimen/dp_750_10"
            android:background="@null"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <View
            android:visibility="gone"
            android:layout_toLeftOf="@+id/preview"
            android:layout_width="@dimen/dp_750_1"
            android:background="#8828292A"
            android:layout_height="match_parent" />

        <Button
            android:visibility="gone"
            android:id="@+id/preview"
            tools:text="预览(1)"
            android:paddingLeft="@dimen/dp_750_32"
            android:paddingRight="@dimen/dp_750_32"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:minHeight="@dimen/dp_750_2"
            android:minWidth="@dimen/dp_750_2"
            android:background="@null"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_750_30"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        </RelativeLayout>

</RelativeLayout>
