<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dimension.me.ChangePhoneActivity"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_phone_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请先验证你的手机号:"
        android:textColor="@color/unit_text_tv_title_1"
        android:textSize="@dimen/sp_750_24"
        android:paddingTop="@dimen/dp_750_40"
        android:paddingLeft="@dimen/dp_750_40"/>

    <RelativeLayout
        android:id="@+id/view_input_code"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_750_88"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_750_48"
        android:layout_marginLeft="@dimen/dp_750_26"
        android:layout_marginRight="@dimen/dp_750_26"
        android:layout_marginBottom="@dimen/dp_750_32">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_bg_input"
            android:alpha="0.2"/>

        <EditText
            android:id="@+id/edt_input_code"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_750_88"
            android:layout_weight="1"
            android:textColorHint="@color/unit_edt_hint_text"
            android:hint="填写验证码"
            android:textColor="@color/unit_text_tv_title_1"
            android:background="@null"
            android:maxLength="6"
            android:textSize="@dimen/sp_750_24"
            android:inputType="number"
            android:paddingLeft="@dimen/dp_750_36"
            android:singleLine="true"/>

        <LinearLayout
            android:id="@+id/view_get_code"
            android:layout_width="@dimen/dp_750_180"
            android:layout_height="@dimen/dp_750_60"
            android:background="@drawable/shape_bg_get"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_750_36"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/dp_750_20"
                android:layout_height="@dimen/dp_750_30"
                android:background="@mipmap/icon_phone_code"/>

            <TextView
                android:id="@+id/tv_get_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:textSize="@dimen/sp_750_24"
                android:layout_marginLeft="@dimen/dp_750_12"
                android:textColor="@color/unit_bg_btn_get"/>

        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_go_next"
        android:layout_width="@dimen/dp_750_400"
        android:layout_height="@dimen/dp_750_80"
        android:background="@drawable/shape_btn_bg_execute"
        android:layout_gravity="center_horizontal"
        android:text="下一步"
        android:textColor="@color/unit_bg_btn_execute"
        android:textSize="@dimen/sp_750_30"
        android:layout_marginTop="@dimen/dp_750_148"/>

    <TextView
        android:id="@+id/tv_no_phone_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="原手机不能接受验证码？"
        android:textColor="@color/unit_text_main_tip_2"
        android:textSize="@dimen/sp_750_18"
        android:padding="@dimen/dp_750_8"
        android:layout_marginTop="@dimen/dp_750_40"/>

</LinearLayout>