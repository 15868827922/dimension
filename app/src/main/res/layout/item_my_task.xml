<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_750_160"
        android:gravity="center_vertical"
        android:background="@drawable/selector_white_item_hover"
        android:paddingLeft="@dimen/dp_750_26"
        android:paddingRight="@dimen/dp_750_26">
        <ImageView
            android:layout_width="@dimen/dp_750_46"
            android:layout_height="@dimen/dp_750_44"
            android:background="@mipmap/icon_start_yellow"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="@dimen/sp_750_30"
            android:textColor="@color/unit_text_tv_title_1"
            android:layout_marginLeft="@dimen/dp_750_20"/>
        <ImageView
            android:layout_width="@dimen/dp_750_22"
            android:layout_height="@dimen/dp_750_20"
            android:background="@mipmap/icon_score_num_tip"
            android:layout_marginLeft="@dimen/dp_750_24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+5"
            android:textSize="@dimen/sp_750_20"
            android:textColor="@color/unit_text_tv_title_1"
            android:layout_marginLeft="@dimen/dp_750_4"/>

        <Button
            android:layout_width="@dimen/dp_750_150"
            android:layout_height="@dimen/dp_750_50"
            android:text="去完成"
            android:textColor="@color/unit_text_tv_title_1"
            android:textSize="@dimen/sp_750_24"
            android:background="@drawable/shape_bg_for_operation"/>
    </LinearLayout>
</LinearLayout>
