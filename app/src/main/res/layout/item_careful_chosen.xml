<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_750_384"
    android:layout_height="@dimen/dp_750_160"
    card:cardBackgroundColor="@color/white"
    android:gravity="center">
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/tools"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dp_750_2"
        card:cardCornerRadius="@dimen/dp_750_20"
        app:cardElevation="0dp"
        app:ignore="NamespaceTypo"
        app:cardPreventCornerOverlap="false"
        card:cardBackgroundColor="@color/white"
        card:cardUseCompatPadding="false">
        <LinearLayout
            android:layout_width="@dimen/dp_750_370"
            android:layout_height="@dimen/dp_750_160"
            android:background="@drawable/shape_careful_chosen_bg"
            android:orientation="horizontal">
            <com.shenjing.dimension.dimension.base.image.roundedimageview.RoundedImageView
                android:id="@+id/imageview"
                android:layout_width="@dimen/dp_750_160"
                android:layout_height="@dimen/dp_750_160"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                android:src="@mipmap/bg_my_backpack_top"
                app:riv_border_color="#e6e6e6"
                app:riv_border_width="0dip"
                app:riv_corner_radius_bottom_left="@dimen/dp_750_20"
                app:riv_corner_radius_bottom_right="0dp"
                app:riv_corner_radius_top_left="@dimen/dp_750_20"
                app:riv_corner_radius_top_right="0dp"
                app:riv_mutate_background="false" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_750_16"
                android:paddingTop="@dimen/dp_750_12"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="兑换物品名称"
                    android:textSize="@dimen/sp_750_24"
                    android:textColor="@color/unit_text_tv_title_1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_750_6"
                    android:paddingRight="@dimen/dp_750_24"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="@dimen/dp_750_18"
                        android:layout_height="@dimen/dp_750_16"
                        android:background="@mipmap/icon_score_num_tip"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2333"
                        android:textColor="@color/unit_text_tv_title_2"
                        android:textSize="@dimen/sp_750_20"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_750_8"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="仅剩11件"
                        android:textColor="@color/unit_text_main_tip"
                        android:textSize="@dimen/sp_750_18"/>
                </LinearLayout>
                
                <Button
                    android:layout_width="@dimen/dp_750_128"
                    android:layout_height="@dimen/dp_750_48"
                    android:background="@drawable/shape_item_btn_bg_execute"
                    android:text="立即兑换"
                    android:textSize="@dimen/sp_750_24"
                    android:textColor="@color/unit_bg_btn_execute"
                    android:layout_marginTop="@dimen/dp_750_16"/>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
