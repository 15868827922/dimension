<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dimension.me.SafeAndSecretActivity"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_phone_tip"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_750_82"
        android:text="您当前绑定手机号 186****1442"
        android:gravity="center_vertical"
        android:textSize="@dimen/sp_750_24"
        android:textColor="@color/unit_text_tv_title_3"
        android:paddingLeft="@dimen/dp_750_26"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_750_10"
        android:background="@color/unit_view_stub"/>

    <com.shenjing.dimension.dimension.view.LPItemArrowRightView
        android:id="@+id/view_change_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_750_100"
        app:itemStyle="type_title_with_textInfo"
        app:titleText="变更手机号"
        android:background="@drawable/selector_white_item_hover"/>

    <View
        style="@style/styleDividerHorizontal"
        android:layout_marginLeft="@dimen/dp_750_24"
        android:layout_marginRight="@dimen/dp_750_26" />
    <com.shenjing.dimension.dimension.view.LPItemArrowRightView
        android:id="@+id/view_change_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_750_100"
        app:itemStyle="type_title_with_textInfo"
        app:titleText="修改密码"
        android:background="@drawable/selector_white_item_hover" />
</LinearLayout>