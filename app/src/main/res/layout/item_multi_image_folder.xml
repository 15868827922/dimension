<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="@dimen/dp_750_24"
    android:paddingBottom="@dimen/dp_750_24"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/cover"
        android:layout_gravity="center_vertical"
        android:scaleType="centerCrop"
        android:src="@color/unit_color_loadimv_main"
        android:layout_width="@dimen/dp_750_120"
        android:layout_height="@dimen/dp_750_120" />

    <LinearLayout
        android:layout_toRightOf="@+id/cover"
        android:layout_toLeftOf="@+id/indicator"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_750_32"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/name"
            tools:text="img"
            android:textSize="@dimen/sp_750_28"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:singleLine="true"
            android:ellipsize="end"
            android:id="@+id/size"
            tools:text="1å¼ "
            android:layout_marginTop="@dimen/dp_750_10"
            android:textSize="@dimen/sp_750_24"
            android:textColor="@color/unit_text_tv_title_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        </LinearLayout>

    <ImageView
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:id="@+id/indicator"
        android:layout_marginLeft="@dimen/dp_750_24"
        android:layout_marginRight="@dimen/dp_750_24"
        android:src="@mipmap/icon_check_goods_select"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>