<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dimension.me.ModifyPersonalInfoActivity"
    android:orientation="vertical"
    android:background="@color/white">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="* 局长tips：仅可使用中英文及阿拉伯数字，不可使用特殊符号哦"
        android:textSize="@dimen/sp_750_20"
        android:gravity="center"
        android:textColor="@color/unit_text_main_tip"
        android:layout_marginTop="@dimen/dp_750_20"/>

    <RelativeLayout
        android:id="@+id/view_input_nickname"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_750_88"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dp_750_48"
        android:layout_marginLeft="@dimen/dp_750_26"
        android:layout_marginRight="@dimen/dp_750_26"
        android:layout_marginBottom="@dimen/dp_750_50">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_bg_input"
            android:alpha="0.2"/>

        <EditText
            android:id="@+id/edt_nickname"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_750_88"
            android:layout_weight="1"
            android:maxLength="6"
            android:textColorHint="@color/unit_edt_hint_text"
            android:hint="给自己取一个响当当的昵称..."
            android:textColor="@color/unit_text_tv_title_1"
            android:background="@null"
            android:textSize="@dimen/sp_750_24"
            android:paddingLeft="@dimen/dp_750_36"/>

        <ImageView
            android:id="@+id/view_delete_nickname"
            android:layout_width="@dimen/dp_750_60"
            android:layout_height="@dimen/dp_750_60"
            android:src="@mipmap/icon_delete_gray"
            android:padding="@dimen/dp_750_15"
            android:layout_gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_750_19"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/view_input_code"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_750_250"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dp_750_48"
        android:layout_marginLeft="@dimen/dp_750_26"
        android:layout_marginRight="@dimen/dp_750_26"
        android:layout_marginBottom="@dimen/dp_750_32">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_bg_input"
            android:alpha="0.2"/>

        <EditText
            android:id="@+id/edt_input_code"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_750_88"
            android:layout_weight="1"
            android:textColorHint="@color/unit_edt_hint_text"
            android:hint="emmmm...写点什么好呢？？"
            android:textColor="@color/unit_text_tv_title_1"
            android:background="@null"
            android:maxLength="35"
            android:textSize="@dimen/sp_750_24"
            android:paddingLeft="@dimen/dp_750_34"/>

        <ImageView
            android:id="@+id/view_delete_sign"
            android:layout_width="@dimen/dp_750_60"
            android:layout_height="@dimen/dp_750_60"
            android:src="@mipmap/icon_delete_gray"
            android:padding="@dimen/dp_750_15"
            android:layout_gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dp_750_21"
            android:layout_marginBottom="@dimen/dp_750_21"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_text_num_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/unit_text_main_tip_2"
        android:text="( 0/35  最多输入35个字)"
        android:gravity="right"
        android:paddingRight="@dimen/dp_750_58"
        android:textSize="@dimen/sp_750_20"/>

</LinearLayout>