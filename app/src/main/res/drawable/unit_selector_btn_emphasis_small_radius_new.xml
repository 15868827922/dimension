                <solid android:color="@color/unit_color_emphasis" />
                <corners android:radius="@dimen/common_sw320dp_of_2p5" />
            </shape>
        </item>
        <item>
            <shape android:shape="rectangle" >
                <solid android:color="@color/white_50_alpha" />
                <corners android:radius="@dimen/common_sw320dp_of_2p5" />
