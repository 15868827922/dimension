<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/progress_custom_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/common_sw320dp_of_20"
    android:paddingLeft="@dimen/common_sw320dp_of_30"
    android:paddingRight="@dimen/common_sw320dp_of_30"
    android:paddingTop="@dimen/common_sw320dp_of_20" >

    <com.zjlp.httpvolly.view.ProgressWheel
        android:id="@+id/progressWheel"
        android:layout_width="@dimen/common_sw320dp_of_40"
        android:layout_height="@dimen/common_sw320dp_of_40"
        wheel:barColor="#80ffffff"
        wheel:barWidth="@dimen/common_sw320dp_of_2"
        wheel:progressIndeterminate="true" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_sw320dp_of_15"
        android:textSize="@dimen/common_font_sw320dp_of_14"
        android:textColor="#a0ffffff"
        android:text="" />

</LinearLayout>